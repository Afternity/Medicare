<Window x:Class="Medicare.ClientWPF.Windows.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medicare.ClientWPF.Windows"
        mc:Ignorable="d"
          Title="Профиль врача" Height="350" Width="400"
        Loaded="Window_Loaded">

    <Grid Background="#debef5">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

            <Button Content="Выход" Grid.Row="0" Margin="5" Width="50" Click="Exit_Click"/>
            <Button Content="Назад" Grid.Row="0" Margin="5" Width="50" Click="Back_Click"/>

        </StackPanel>

        <StackPanel Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="10"  Width="150">

            <TextBlock Text="Профиль врача" FontSize="15" HorizontalAlignment="Center" Margin="5"/>

            <TextBlock Text="ФИО:" Margin="5"/>
            <TextBox Name="FullNameTextBlock" IsReadOnly="True" Margin="5"/>

            <TextBlock Text="Email:" Margin="5"/>
            <TextBox Name="EmailTextBlock" Margin="5"/>

            <TextBlock Text="Пароль:" Margin="5"/>
            <TextBox Name="PasswordTextBlock" Margin="5"/>

            <TextBlock Text="Телефон:" Margin="5"/>
            <TextBox Name="PhoneTextBlock" Margin="5"/>

            <TextBlock Text="Специализация:" Margin="5"/>
            <TextBox Name="DoctorTypeTextBlock" IsReadOnly="True" Margin="5"/>

        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Margin="10">
            <Button Content="Редактировать профиль" Click="EditProfile_Click" Width="150" Margin="5 0 0 20"/>

            <TextBlock x:Name="PatientCountTextBlock"/>
        </StackPanel>
    </Grid>
</Window>
