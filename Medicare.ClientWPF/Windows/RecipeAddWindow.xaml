<Window x:Class="Medicare.ClientWPF.Windows.RecipeAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medicare.ClientWPF.Windows"
        mc:Ignorable="d"
        Title="Выписать рецепт" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Background="#debef5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Пациент -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Пациент:" 
                   Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PatientTextBlock" 
                   Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>

        <!-- Врач -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Врач:" 
                   Margin="5" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DoctorTextBlock" 
                   Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>

        <!-- Лекарство -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Лекарство:" 
                   Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="MedicationTextBox" 
                 Margin="5" Height="25"/>

        <!-- Дозировка -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дозировка:" 
                   Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="DosageTextBox" 
                 Margin="5" Height="25"/>

        <!-- Длительность -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Длительность (дни):" 
                   Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="DurationDaysTextBox" 
                 Margin="5" Height="25" Text="7"/>

        <!-- Инструкции -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Инструкции:" 
                   Margin="5" VerticalAlignment="Top"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="InstructionsTextBox" 
                 Margin="5" Height="100" TextWrapping="Wrap" 
                 AcceptsReturn="True" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto"
                 Text="Принимать согласно назначению"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Выписать рецепт" Width="120" Margin="10" 
                    Click="AddButton_Click"/>
            <Button Content="Отмена" Width="100" Margin="10" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
