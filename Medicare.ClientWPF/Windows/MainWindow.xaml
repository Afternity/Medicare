<Window x:Class="Medicare.ClientWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medicare.ClientWPF.Windows"
        mc:Ignorable="d"
        Title="Главная" Height="750" Width="1350" 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">

            <Button Content="Профиль" Width="100" Margin="5" HorizontalAlignment="Left" Click="ProfileWindow_Click"/>

            <TextBlock Text="Дата приёма:" Margin="5"/>
            <DatePicker x:Name="AppointmentDateDatePicker" Width="200" Margin="5"/>

            <TextBlock Text="ФИО пациента:" Margin="5"/>
            <TextBox x:Name="PatientFullNameTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Номер тел. клиента:" Margin="5"/>
            <TextBox x:Name="PatientPhoneTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Детали:" Margin="5"/>
            <TextBox x:Name="AppointmentNoteTextBox" Width="200" Margin="5"/>

        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#debef5"
                 x:Name="ListBoxUI"
                 SelectionChanged="ListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <StackPanel Orientation="Horizontal">

                        <TextBlock Text="Дата приема:" Margin="5"/>
                        <TextBlock Text="{Binding AppointmentDate}" FontWeight="Bold" TextWrapping="Wrap" Width="80" Margin="5"/>

                        <TextBlock Text="ФИО пациента:" Margin="5"/>
                        <TextBlock Text="{Binding Patient.FullName}" FontWeight="Bold" TextWrapping="Wrap" Width="200" Margin="5"/>

                        <TextBlock Text="Номер тел. пациента:" Margin="5"/>
                        <TextBlock Text="{Binding Patient.Phone}" FontWeight="Bold" Width="120" Margin="5"/>

                        <TextBlock Text="Статус:" Margin="5"/>
                        <TextBlock Text="{Binding Status}" FontWeight="Bold" Width="80" Margin="5"/>

                        <TextBlock Text="Детали:" Margin="5"/>
                        <TextBlock Text="{Binding Notes}" TextWrapping="Wrap" FontWeight="Bold" Width="300" Margin="5"/>

                    </StackPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" >
            
            <Button Click="DeepSearch_Click" Content="Найти" Width="150" Margin="5"/>
            <Button Click="MedicalCardWindow_Click" Content="Мед. карта" Width="150" Margin="5"/>
            <Button Click="RecipeWindow_Click" Content="Рецепты" Width="150" Margin="5"/>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Width="300">

            <TextBlock Text="Id:" Margin="5"/>
            <TextBox x:Name="AppointmentIdTextBlock" IsReadOnly="True" Width="300" Margin="5"/>

            <TextBlock Text="Дата приема:" Margin="5"/>
            <TextBox x:Name="AppointmentDateTextBlock" IsReadOnly="True" TextWrapping="Wrap" Width="300" Margin="5"/>

            <TextBlock Text="ФИО пациента:" Margin="5"/>
            <TextBox x:Name="PatientFullNameTextBlock" IsReadOnly="True" Width="300" Margin="5"/>

            <TextBlock Text="Номер тел. пациента:" Margin="5"/>
            <TextBox x:Name="PatientPhoneTextBlock" IsReadOnly="True" Width="300" Margin="5"/>

            <TextBlock Text="Статус:" Margin="5"/>
            <TextBox x:Name="AppointmentStatusTextBlock" IsReadOnly="True" Width="300" Margin="5"/>

            <TextBlock Text="Детали:" Margin="5"/>
            <TextBox x:Name="AppointmentNotesTextBlock" IsReadOnly="True" Width="300" Margin="5"/>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1">



        </StackPanel>

    </Grid>
</Window>
